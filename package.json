{
  "name": "react-xo-ava-app",
  "version": "1.0.0",
  "description": "create react app with xo, ava and more",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lxghtless/react-xo-ava-app.git"
  },
  "keywords": [
    "react",
    "xo",
    "ava"
  ],
  "author": "lxghtless",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lxghtless/react-xo-ava-app/issues"
  },
  "homepage": "https://github.com/lxghtless/react-xo-ava-app#readme",
  "dependencies": {
    "@lxghtless/react-scripts": "^0.2.0",
    "gravatar-url": "^3.0.1",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-parallax": "^2.2.0",
    "react-router-dom": "^5.0.0",
    "ava": "^1.4.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "nyc": "^14.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "react-scripts lint",
    "test": "npm run lint && NODE_ENV=test nyc ava"
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "extends": "xo-react",
    "plugins": [
      "unicorn",
      "react"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "import/extensions": [
        "js",
        "styl",
        "png",
        "jpg",
        "svg"
      ],
      "react/prop-types": 0,
      "react/jsx-fragments": 0,
      "capitalized-comments": 0,
      "react/self-closing-comp": 0
    },
    "parser": "babel-eslint"
  },
  "react-scripts": {
    "devServer": {
      "port": 8080,
      "host": "localhost"
    },
    "open": {
      "scheme": "http",
      "port": 8080,
      "host": "localhost"
    }
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "sources": [
      "src/**/*.js"
    ],
    "cache": true,
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": true,
    "verbose": true,
    "require": [
      "./scripts/test.js"
    ]
  }
}
